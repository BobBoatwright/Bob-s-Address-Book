<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/addressGreen</item>
        <item name="colorPrimaryDark">@color/addressGray</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <!--<item name="android:textColor">@color/white</item>-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
    </style>

    <style name="AddressCardTheme" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#172910</item>
    </style>

    <style name="EditCardTheme" parent="@android:style/TextAppearance.Medium">
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/addressLightGray</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_down_anim</item>
    </style>
</resources>
